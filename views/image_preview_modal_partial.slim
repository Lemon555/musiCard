div id="ImagePreviewModal" class="modal fade" role="dialog"
  div class="modal-dialog"
    div class="modal-content"
      div class="modal-header"
        button id="close_btn" type="button" class="close" data-dismiss="modal" &times;
        h4 class="modal-title" Preview
      div class="modal-body"
        img id="album_image" src="" width="100%" height="100%"
      div class="modal-footer"
        form role="form" action="/edit" method='get' id='choose-image-form'
          input{
            type='hidden' name='img_url' id='img_url'
            value=""
          }
          input{
            type='hidden' name='track_url' id='track_url'
            value=""
          }
          button{
            type="submit" id="track-image-submit" class="btn btn-success"
          }Choose

javascript:
  $('#ImagePreviewModal').on('show.bs.modal', function(e) {
    var img_url = $(e.relatedTarget).data('img_url');
    var track_url = $(e.relatedTarget).data('track_url');
    var modal = $(this)
    modal.find('.modal-body img').attr('src',img_url[0]);
    modal.find('#img_url').attr('value',img_url[0]) ;
    modal.find('#track_url').attr('value',track_url) ;
  })
