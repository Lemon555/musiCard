    / == slim :nav
    nav class="navbar navbar-inverse navbar-fixed-top" style="font-family: 'Work Sans', sans-serif;"
      div class="container-fluid"
        div class="navbar-header"
          a class="navbar-brand" id ="header-link" href="https://musicard.herokuapp.com/" musiCard

    div class="jumbotron text-center"
      h1 Search, edit, share <br> Music with Quotes.
      br
      form action="/" method="post"
        div class="input-group"
          input id="search_input" type="text" class="form-control" placeholder="Search to start..." name="search_input"
          div class="input-group-btn"
            button class="btn btn-default" type="submit" id="search_btn"
              i class="glyphicon glyphicon-search"

  javascript:
    $(document).ready(function(){
      if($("#search_input").val() == "")
        $("#search_btn").addClass("disabled").attr("disabled", true);

      $("#search_input").on('keyup keydown keypress change paste', function(){
        var empty = ( $("#search_input").val() == '' );
        $("#search_btn").toggleClass('disabled', empty);
        if(empty)
          $("#search_btn").attr("disabled", empty);
        else
          $("#search_btn").attr("disabled", empty);
      });
    });
